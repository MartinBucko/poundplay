#Sparda
#this copies files from any usb drive and places them in the directory chosen

#import date
$todaysDate = Get-Date -format yyyyMMdd

#define external device
$mydrive=GWmi Win32_Logicaldisk | ?{$_.Bustype -Eq "USB"}

#define folder for loot
$destinationFolder = "C:\Users\$env:Username\Documents\loot\$todaysDate"

#create storage location
if (!(Test-Path -path $destinationFolder)) {New-Item $destinationFolder -Type Directory}

#find external items device and copy desired data 
Get-ChildItem -Path "$mydrive" -Include .\"*.jpg" | Copy-Item  -Destination $destinationFolder -verbose
